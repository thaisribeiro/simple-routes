{
  "name": "simple-routes",
  "version": "1.0.0",
  "description": "Facilitator for creating simple endpoints",
  "main": "app.js",
  "scripts": {
    "dev": "NODE_ENV=development ./node_modules/.bin/nodemon app.js -L --exec ./node_modules/.bin/babel-node --presets es2015,stage-2",
    "debug": "NODE_ENV=development ./node_modules/.bin/nodemon --inspect-brk=0.0.0.0:9229 app.js -L --exec ./node_modules/.bin/babel-node --presets es2015,stage-2",
    "lint": "eslint . --fix",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "keywords": [
    "simple-routes"
  ],
  "author": "thaisnribeiro2008@gmail.com",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.2.0",
    "express-application": "^1.0.14",
    "express-validate": "0.0.8",
    "express-validation": "^1.0.2",
    "joi": "^14.3.1",
    "mongoose": "^5.4.4",
    "mongoose-paginate": "^5.0.3",
    "mongoose-soft": "^0.5.2",
    "mongoose-timestamp": "^0.6.0",
    "path": "^0.12.7",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "eslint": "^5.12.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "standard": "^12.0.1",
    "superagent-defaults": "^0.1.14",
    "supertest": "^3.4.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src/services"
    ],
    "runFirstly": [
      "helper.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verifyCommitMsg.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
